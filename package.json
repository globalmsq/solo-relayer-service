{
  "name": "msq-relayer-service",
  "version": "1.0.0",
  "private": true,
  "description": "MSQ Relayer Service - Meta Transaction Relay Infrastructure",
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "pnpm --filter @msq-relayer/relay-api run dev",
    "build": "pnpm -r run build",
    "test": "pnpm --filter @msq-relayer/relay-api run test",
    "test:cov": "pnpm --filter @msq-relayer/relay-api run test:cov",
    "test:contracts": "pnpm --filter @msq-relayer/contracts run test",
    "test:integration": "cd docker && docker compose run --rm integration-tests",
    "test:all": "pnpm test && pnpm test:contracts",
    "lint": "pnpm -r run lint",
    "docker:up": "cd docker && docker compose up -d",
    "docker:down": "cd docker && docker compose down",
    "docker:build": "cd docker && docker compose up --build",
    "create-keystore": "node scripts/create-keystore.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/msq-relayer-service.git"
  },
  "license": "MIT",
  "devDependencies": {
    "ethers": "^6.13.0"
  }
}
